<% if product.errors.present? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: product, local: true do |t| %>

    <div class="form-group col-md-6">
      <%= t.label :name %>
      <%= t.text_field :name, class: 'form-control', id: 'product_name' %>
    </div>

    <div class="form-group">
      <%= t.label :description %>
      <%= t.text_area :description, class: 'form-control', id: 'product_description' %>
    </div>

  <div class="form-group">
    <label for="image">イメージ</label>
    <input type="file" class="form-control" id="product_image">
  </div>

    <div class="form-group col-md-6">
      <%= t.label :price %>
      <%= t.text_field :price, class: 'form-control', id: 'product_price' %>
    </div>

    <div class="form-group col-md-6">
　    <%= t.label :category %>
      <select class="custom-select">
        <option selected>選択メニュー</option>
        <option value="1">卒業式袴</option>
        <option value="2">振袖</option>
        <option value="3">訪問着</option>
      </select>
    </div>

    <div class="form-group col-md-6">
      <%= t.label :color %>
      <select class="custom-select">
        <option selected>選択メニュー</option>
        <option value="1">赤色</option>
        <option value="2">青色</option>
        <option value="3">黒色</option>
        <option value="1">白色</option>
        <option value="2">黄色</option>
        <option value="3">水色</option>
      </select>
    </div>

    <div class="form-group col-md-6">
      <%= t.label :scene %>
      <select class="custom-select">
        <option selected>選択メニュー</option>
        <option value="1">卒業式</option>
        <option value="2">結婚式</option>
        <option value="3">パーティー</option>
      </select>
    </div>

    <%= t.submit nil, class: 'btn btn-primary' %>

  <% end %>