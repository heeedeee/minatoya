<h1>商品の新規登録</h1>
<div class="nav-justify-content-end">
  <%= link_to '商品一覧', products_path, class: 'nav-link' %>
</div>

<%= form_with model: @product, local: true do |t| %>





    <div class="form-group">
      <%= t.label :name %>
      <%= t.text_field :name, class: 'form-control', id: 'product_name' %>
    </div>

    <div class="form-group">
      <%= t.label :description %>
      <%= t.text_area :description, rows: 5, class: 'form-control', id: 'product_description' %>
    </div>

    <div class="form-group">
      <%= t.label :image %>
      <%= t.text_field :image, class: 'form-control', id: 'product_image' %>
    </div>

    <div class="form-group">
      <%= t.label :price %>
      <%= t.text_field :price, class: 'form-control', id: 'product_price' %>
    </div>

    <div class="form-group">
      <%= t.label :category %>
      <%= t.text_field :category, class: 'form-control', id: 'product_category' %>
    </div>

    <div class="form-group">
      <%= t.label :color %>
      <%= t.text_field :color, class: 'form-control', id: 'product_color' %>
    </div>

    <div class="form-group">
      <%= t.label :scene %>
      <%= t.text_field :scene, class: 'form-control', id: 'product_scene' %>
    </div>

    <%= t.submit nil, class: 'btn btn-primary' %>

  <% end %>
