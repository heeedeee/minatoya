<h1>商品の編集</h1>

<div class="nav.justify-content-end">
  <%= link_to '商品一覧', products_path, class: 'nav-link' %>

<%= form_with model: @product, local: true do |m| %>
  <form class="form-inline">
    <div class="form-group">
      <%= m.label :name %>
      <%= m.text_field :name, class: 'form-control', id: 'product_name' %>
    </div>

    <div class="form-group">
      <%= m.label :description %>
      <%= m.text_area :description, rows: 5, class: 'form-control', id: 'product_description' %>
    </div>

    <div class="form-group">
      <%= m.label :image %>
      <%= m.text_field :image, class: 'form-control', id: 'product_image' %>
    </div>

    <div class="form-group">
      <%= m.label :price %>
      <%= m.text_field :price, class: 'form-control', id: 'product_price' %>
    </div>

    <div class="form-group">
      <%= m.label :category %>
      <%= m.text_field :category, class: 'form-control', id: 'product_category' %>
    </div>

    <div class="form-group">
      <%= m.label :color %>
      <%= m.text_field :color, class: 'form-control', id: 'product_color' %>
    </div>

    <div class="form-group">
      <%= m.label :scene %>
      <%= m.text_field :scene, class: 'form-control', id: 'product_scene' %>
    </div>

    <%= m.submit nil, class: 'btn btn-primary' %>

  <% end %>
</div>

