<h1>ユーザー登録</h1>

<div class="nav-justify-content-end">
  <%= link_to 'ユーザ一覧', admin_users_path, class: 'nav-link' %>
</div>

<%= form_with model: [admin, @user], local: true do |f| %>
    <div class="form-group">
      <%= t.label :first_name %>
      <%= t.text_field :first_name, class: 'form-control', id: 'user_first_name' %>
    </div>

    <div class="form-group">
      <%= t.label :last_name %>
      <%= t.text_area :last_name, class: 'form-control', id: 'user_last_name' %>
    </div>

    <div class="form-group">
      <%= t.label :address %>
      <%= t.text_field :address, class: 'form-control', id: 'user_address' %>
    </div>

    <div class="form-group">
      <%= t.label :tel %>
      <%= t.text_field :tel, class: 'form-control', id: 'user_tel' %>
    </div>

    <div class="form-group">
      <%= t.label :email %>
      <%= t.text_field :email, class: 'form-control', id: 'user_email' %>
    </div>

    <div class="form-check">
      <%= t.label :admin, class: 'form-check-label' do %>
        <%= t.check_box :admin, class: 'form-check-input' %>
        | 管理者権限
    </div>

    <div class="form-group">
      <%= t.label :password %>
      <%= t.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= t.label :password_confirmation, 'パスワード（確認）' %>
      <%= t.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <%= t.submit '登録する', class: 'btn btn-primary' %>

<% end %>
