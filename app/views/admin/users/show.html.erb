<h1>ユーザー詳細</h1>

<div class="nav-justify-content-end"></div>
  <%= link_to 'ユーザー一覧', admin_users_path, class: 'nav-link' %>

<table class="table　table　table-hover">
  <tbody>
    <tr>
      <th><%= User.human_attribute_name(:id) %>
      <td><%= @user.id %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:first_name) %>
      <td><%= @user.first_name %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:last_name) %>
      <td><%= @user.last_name %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:address) %>
      <td><%= @user.address %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:tel) %>
      <td><%= @user.tel %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:email) %>
      <td><%= @user.email %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:admin) %>
      <td><%= @user.admin? ? 'あり' : 'なし' %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:created_at) %>
      <td><%= @user.created_at %>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:updated_at) %>
      <td><%= @user.updated_at %>
    </tr>
  </tbody>
</table>

<%= link_to '編集', admin_user_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', user, method: :delate, date: { confirm: "タスク「#{@user.name}」を削除しましす。よろしいですか？" }, class: 'btn btn-danger' %>

